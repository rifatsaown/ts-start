{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
   
    "skipLibCheck": true /* Skip type checking all .d.ts files. */
  },
  // "include": ["src/**/*.ts"],
  // "exclude": ["node_modules"]
}
